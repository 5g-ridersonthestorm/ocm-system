@model OCM.API.Common.Model.ChargePoint

@if (ViewContext.Controller.ViewBag.EnablePreviewMode != true && Model.SubmissionStatus != null && Model.SubmissionStatus.IsLive == false)
{
<div class="alert alert-danger">
    This listing is marked <strong>@Model.SubmissionStatus.Title</strong> and is not currently shown publically.

    @if (ViewContext.Controller.ViewBag.UserCanEditPOI == true && Model.SubmissionStatusTypeID == (int)OCM.API.Common.Model.StandardSubmissionStatusTypes.Submitted_UnderReview)
    {
        <a class="btn btn-success" href="@Url.Action("Approve","POI",new { id= Model.ID})">Publish Now</a>
    }
</div>
}